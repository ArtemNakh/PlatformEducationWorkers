<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PlatformEducationWorkers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom-admin-styles.css" asp-append-version="true" />
</head>
<body>
    <div class="main-content">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="Administrator" asp-controller="MainAdmin" asp-action="MainAdmin">
                        @ViewData["CompanyName"]
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link btn btn-custom" asp-area="Administrator" asp-controller="MainAdmin" asp-action="MainAdmin">Головна</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-custom" asp-area="Administrator" asp-controller="Courses" asp-action="Courses">Курси</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-custom" asp-area="Administrator" asp-controller="Workers" asp-action="Workers">Працівники</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-custom" asp-area="Administrator" asp-controller="Courses" asp-action="HistoryPassage">Проходження</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-custom" asp-area="Administrator" asp-controller="JobTitles" asp-action="Jobtitles">Посади</a>
                            </li>
                           
                        </ul>
                        <div class="nav-item d-flex align-items-center justify-content-end">
                            <a asp-controller="Login" asp-action="Logout" class="d-flex align-items-center">
                                <img src="/Sourses/Exit.png" alt="Exit" class="navbar-icon-exit">
                            </a>
                            <a asp-controller="Account" asp-action="Credentials" class="d-flex align-items-center ms-2">
                                <img src="@ViewData["UserAvatar"]" alt="User Avatar" class="navbar-icon">
                            </a>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <footer class="footer bg-dark text-white py-4">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        &copy; 2024 PlatformEducationWorkers
                    </div>
                    <div class="col-md-6 text-md-end">
                        @* <a href="@Url.Action("Privacy", "Home")" class="text-white">Privacy</a> *@
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
