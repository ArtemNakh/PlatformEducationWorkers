@model PlatformEducationWorkers.Request.LoginRequest

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

<h2>Login</h2>

@if (TempData["Error"] != null) 
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<form asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="Login"></label>
        <input asp-for="Login" class="form-control" placeholder="Enter your login" required />
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
