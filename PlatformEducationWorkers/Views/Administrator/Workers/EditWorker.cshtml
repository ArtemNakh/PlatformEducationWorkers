@using PlatformEducationWorkers.Core.Models
@model PlatformEducationWorkers.Request.UpdateUserRequest

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Edit User Details";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2>Edit User Details</h2>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    <label for="Name" class="form-label">Name</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    <label for="Surname" class="form-label">Surname</label>
                    @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    <label for="Birthday" class="form-label">Birthday</label>
                    @Html.EditorFor(m => m.Birthday, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Birthday, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    <label for="Email" class="form-label">Email</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    <label for="JobTitleId" class="form-label">Job Title</label>
                    @Html.DropDownListFor(m => m.JobTitleId, new SelectList(ViewBag.JobTitles, "Id", "Name"), "- Select Job Title -", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.JobTitleId, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    <label for="Role" class="form-label">Role</label>
                    @Html.DropDownListFor(m => m.Role, new SelectList(Enum.GetValues(typeof(Role))), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    <label for="Password" class="form-label">Password</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    <label for="Login" class="form-label">Login</label>
                    @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Login, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-success btn-lg mt-3">Save Changes</button>
            }

            <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg mt-3">Cancel</a>
        </div>
    </div>
</div>
