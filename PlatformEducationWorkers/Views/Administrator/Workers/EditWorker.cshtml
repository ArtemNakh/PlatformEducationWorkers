@using PlatformEducationWorkers.Core.Models
@model PlatformEducationWorkers.Request.UpdateUserRequest

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Edit User Details";
}

<h2>Edit User Details</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="Name">Name</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-group">
        <label for="Surname">Surname</label>
        @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Surname)
    </div>

    <div class="form-group">
        <label for="Birthday">Birthday</label>
        @Html.EditorFor(m => m.Birthday, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Birthday)
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email)
    </div>

    <div class="form-group">
        <label for="JobTitleId">Job Title</label>
        @Html.DropDownListFor(m => m.JobTitleId, new SelectList(ViewBag.JobTitles, "Id", "Name"), "- Select Job Title -", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.JobTitleId)
    </div>

    <div class="form-group">
        <label for="Role">Role</label>
        @Html.DropDownListFor(m => m.Role, new SelectList(Enum.GetValues(typeof(Role))), new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Role)
    </div>

    <div class="form-group">
        <label for="Password">Password</label>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>

    <div class="form-group">
        <label for="Login">Login</label>
        @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Login)
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
}

<a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
