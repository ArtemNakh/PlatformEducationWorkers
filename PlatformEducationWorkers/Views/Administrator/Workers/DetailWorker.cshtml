@model PlatformEducationWorkers.Core.Models.User

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "User Details";
}

<h2>User Details</h2>

<div>
    <h3>@Model.Name @Model.Surname</h3>
    <p><strong>Birthday:</strong> @Model.Birthday.ToShortDateString()</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Role:</strong> @Model.Role</p>
    <p><strong>Job Title:</strong> @Model.JobTitle.Name</p>
    <p><strong>Enterprise:</strong> @Model.Enterprise.Title</p>
    <p><strong>Created On:</strong> @Model.DateCreate.ToShortDateString()</p>
</div>

<div>
    <a href="@Url.Action("EditWorker", new { id = Model.Id })" class="btn btn-primary">Edit</a>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
</div>
