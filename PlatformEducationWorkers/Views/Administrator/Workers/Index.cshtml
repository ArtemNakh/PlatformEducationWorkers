@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Workers";
}

<h2>Список користувачів</h2>

<!-- Кнопка для створення нового користувача -->
<a href="@Url.Action("Create", "Workers", new { area = "Administrator" })" class="btn btn-primary">Додати нового користувача</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ім'я</th>
            <th>Електронна пошта</th>
            <th>Дата створення</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in ViewBag.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.DateCreate.ToString("yyyy-MM-dd")</td>
                <td>
                    <!-- Додайте кнопки для редагування та видалення, якщо потрібно -->
                    <a href="@Url.Action("Edit", "Workers", new { id = user.Id, area = "Administrator" })" class="btn btn-warning">Редагувати</a>
                    <a href="@Url.Action("Delete", "Workers", new { id = user.Id, area = "Administrator" })" class="btn btn-danger">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
