@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Workers";
}

<h2>Список користувачів</h2>

<a href="@Url.Action("CreateWorker", "Workers", new { area = "Administrator" })" class="btn btn-primary">Додати нового користувача</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ім'я</th>
            <th>Електронна пошта</th>
            <th>Дата створення</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Users != null)
        {
            foreach (var user in ViewBag.Users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.DateCreate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a href="@Url.Action("DetailWorker", "Workers", new { id = user.Id, area = "Administrator" })" class="btn btn-info">Деталі</a>

                        <form action="@Url.Action("DeleteWorker", "Workers", new { id = user.Id, area = "Administrator" })" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Видалити</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">Користувачів не знайдено.</td>
            </tr>
        }
    </tbody>
</table>
