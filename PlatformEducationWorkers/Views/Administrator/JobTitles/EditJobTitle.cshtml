@model PlatformEducationWorkers.Request.JobTitlesRequest.EditJobTitleRequest

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Редагувати посаду";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2><i class="bi bi-pencil-square"></i> Редагувати посаду</h2>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group mb-4">
                    <label for="Name" class="form-label">Назва посади</label>
                    <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
                <button type="submit" class="btn btn-primary w-100">Зберегти зміни</button>
            </form>
        </div>
        <div class="card-footer text-center">
            <a href="@Url.Action("JobTitles", "JobTitles")" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Назад до списку посад
            </a>
        </div>
    </div>
</div>
