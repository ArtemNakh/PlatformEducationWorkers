@model PlatformEducationWorkers.Core.Models.JobTitle

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Деталі посади";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2><i class="bi bi-briefcase"></i> Деталі посади</h2>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-4 text-end">
                    <h5><strong>Назва посади:</strong></h5>
                </div>
                <div class="col-md-8">
                    <p class="form-control bg-light">@Model.Name</p>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col-md-4 text-end">
                    <h5><strong>Компанія:</strong></h5>
                </div>
                <div class="col-md-8">
                    <p class="form-control bg-light">@Model.Enterprise.Title</p>
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <a href="@Url.Action("JobTitles", "JobTitles")" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Назад до списку посад
            </a>
        </div>
    </div>
</div>
