@model PlatformEducationWorkers.Request.JobTitlesRequest.CreateJobTitleRequest

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Додати нову посаду";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2>Додати нову посаду</h2>
        </div>
        <div class="card-body">
            <form asp-action="AddJobTitle" method="post">
                <div class="form-group mb-3">
                    <label for="Name" class="form-label"><strong>Назва посади</strong></label>
                    <input type="text"
                           class="form-control"
                           id="Name"
                           name="Name"
                           placeholder="Введіть назву посади"
                           required />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="bi bi-plus-circle"></i> Додати посаду
                    </button>
                    <a href="@Url.Action("JobTitles", "JobTitles")" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Скасувати
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
