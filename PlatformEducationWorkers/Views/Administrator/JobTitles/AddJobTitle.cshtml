@model PlatformEducationWorkers.Request.CreateJobTitleRequest
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Add New Job Title</h2>

<form asp-action="AddJobTitle" method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>

    <button type="submit" class="btn btn-primary">Add Job Title</button>
</form>

<a href="@Url.Action("Index", "JobTitles")" class="btn btn-secondary">Cancel</a>
