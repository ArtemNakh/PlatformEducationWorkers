@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    ViewData["Title"] = "Головна";
}

<div class="container mt-5">
    <div class="row">
        <!-- Left Column -->
        <div class="col-md-6">
            <div class="card shadow-lg mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Останні проходи</h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.LastPassages != null && ((IEnumerable<PlatformEducationWorkers.Core.Models.UserResults>)ViewBag.LastPassages).Any())
                    {
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Користувач</th>
                                    <th>Курс</th>
                                    <th>Дата</th>
                                    <th>Рейтинг</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var result in (IEnumerable<PlatformEducationWorkers.Core.Models.UserResults>)ViewBag.LastPassages)
                                {
                                    <tr>
                                        <td>@result.User.Name</td>
                                        <td>@result.Course.TitleCource</td>
                                        <td>@result.DateCompilation.ToShortDateString()</td>
                                        <td>@result.Rating / @result.MaxRating</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">Останні проходження не знайдено.</p>
                    }
                </div>
            </div>

            <div class="card shadow-lg mb-4">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0">Нові курси</h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.NewCourses != null && ((IEnumerable<PlatformEducationWorkers.Core.Models.Courses>)ViewBag.NewCourses).Any())
                    {
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Назва</th>
                                    <th>Опис</th>
                                    <th>Дата</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var course in (IEnumerable<PlatformEducationWorkers.Core.Models.Courses>)ViewBag.NewCourses)
                                {
                                    <tr>
                                        <td>@course.TitleCource</td>
                                        <td>@course.Description</td>
                                        <td>@course.DateCreate.ToShortDateString()</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">Нових курсів не знайдено.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-md-6">
            <div class="card shadow-lg mb-4">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Нові користувачі</h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.NewUsers != null && ((IEnumerable<PlatformEducationWorkers.Core.Models.User>)ViewBag.NewUsers).Any())
                    {
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Ім'я</th>
                                    <th>Електронна пошта</th>
                                    <th>Дата реєстрації</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in (IEnumerable<PlatformEducationWorkers.Core.Models.User>)ViewBag.NewUsers)
                                {
                                    <tr>
                                        <td>@user.Name @user.Surname</td>
                                        <td>@user.Email</td>
                                        <td>@user.DateCreate.ToShortDateString()</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">Нових користувачів не знайдено.</p>
                    }
                </div>
            </div>

            <div class="card shadow-lg mb-4">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">Середній рейтинг усіх пройдених курсів</h4>
                </div>
                <div class="card-body text-center">
                    @if (ViewBag.AverageRating != null)
                    {
                        <p class="display-4"><strong>@ViewBag.AverageRating.ToString("F2")%</strong></p>
                    }
                    else
                    {
                        <p class="text-muted">Немає рейтингових даних.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
