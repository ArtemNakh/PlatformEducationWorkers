@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <!-- Left Column -->
        <div class="col-md-6">
            <div class="card shadow-lg mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Last Passages</h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.LastPassages != null && ((IEnumerable<PlatformEducationWorkers.Core.Models.UserResults>)ViewBag.LastPassages).Any())
                    {
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>User</th>
                                    <th>Course</th>
                                    <th>Date</th>
                                    <th>Rating</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var result in (IEnumerable<PlatformEducationWorkers.Core.Models.UserResults>)ViewBag.LastPassages)
                                {
                                    <tr>
                                        <td>@result.User.Name</td>
                                        <td>@result.Course.TitleCource</td>
                                        <td>@result.DateCompilation.ToShortDateString()</td>
                                        <td>@result.Rating / @result.MaxRating</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No recent passages found.</p>
                    }
                </div>
            </div>

            <div class="card shadow-lg mb-4">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0">New Courses</h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.NewCourses != null && ((IEnumerable<PlatformEducationWorkers.Core.Models.Courses>)ViewBag.NewCourses).Any())
                    {
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var course in (IEnumerable<PlatformEducationWorkers.Core.Models.Courses>)ViewBag.NewCourses)
                                {
                                    <tr>
                                        <td>@course.TitleCource</td>
                                        <td>@course.Description</td>
                                        <td>@course.DateCreate.ToShortDateString()</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No new courses found.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-md-6">
            <div class="card shadow-lg mb-4">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">New Users</h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.NewUsers != null && ((IEnumerable<PlatformEducationWorkers.Core.Models.User>)ViewBag.NewUsers).Any())
                    {
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Registration Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in (IEnumerable<PlatformEducationWorkers.Core.Models.User>)ViewBag.NewUsers)
                                {
                                    <tr>
                                        <td>@user.Name @user.Surname</td>
                                        <td>@user.Email</td>
                                        <td>@user.DateCreate.ToShortDateString()</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No new users found.</p>
                    }
                </div>
            </div>

            <div class="card shadow-lg mb-4">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">Average Rating all passaged cources</h4>
                </div>
                <div class="card-body text-center">
                    @if (ViewBag.AverageRating != null)
                    {
                        <p class="display-4"><strong>@ViewBag.AverageRating.ToString("F2")%</strong></p>
                    }
                    else
                    {
                        <p class="text-muted">No rating data available.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
