
@using PlatformEducationWorkers.Core.Models;
@using PlatformEducationWorkers.Request.PassageCource

@{
    Layout = "~/Views/Shared/_LayoutWorker.cshtml";
    ViewBag.Title = "Деталі Курсу";

    //var course = ViewBag.Course as Cources;
    var result = ViewBag.Result as UserResults;
    var content = ViewBag.Content as string;
    var questions = ViewBag.Questions as List<UserQuestionRequest>;
}

<h2>@result.Cource.TitleCource</h2>

<div class="course-details">
    <p><strong>Опис:</strong> @result.Cource.Description</p>
    <p><strong>Дата створення курса:</strong> @result.Cource.DateCreate.ToString("dd.MM.yyyy")</p>
    <p><strong>Дата проходження курса:</strong> @result.DateCompilation.ToString("dd.MM.yyyy")</p>

    @if (result.Cource.ShowContextPassage && !string.IsNullOrEmpty(content))
    {
        <h3>Вміст курсу</h3>
        <ul>
            @foreach (var item in content)
            {
                <li>@item</li>
            }
        </ul>
    }

   
    @if (questions != null && questions.Any())
    {
        <h3>Питання</h3>
        @foreach (var question in questions)
        {
            <p><strong>Питання:</strong> @question.Text</p>

            <ul>
                @foreach (var answer in question.Answers)
                {
                    <li>
                        @answer.Text

                        @if (result.Cource.ShowCorrectAnswers && answer.IsCorrectAnswer)
                        {
                            <span style="color: green;">(Вірна відповідь)</span>
                        }

                        @if (result.Cource.ShowSelectedAnswers && answer.IsSelected)
                        {
                            <span style="color: blue;">(Вибрана відповідь)</span>
                        }
                    </li>
                }
            </ul>
        }
    }
</div>

<a href="@Url.Action("Index", "Cources", new { area = "Worker" })" class="btn btn-secondary">Назад до курсів</a>
