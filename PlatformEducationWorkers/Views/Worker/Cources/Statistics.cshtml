@using PlatformEducationWorkers.Core.Models
@{
    Layout = "~/Views/Shared/_LayoutWorker.cshtml";
    var coursesStatistics = ViewBag.CoursesStatistics as IEnumerable<UserResults>;
}

<h2>Пройдені курси - Статистика</h2>

@if (coursesStatistics == null || !coursesStatistics.Any()) // Перевірка, чи модель порожня
{
    <p>Ви ще не пройшли жоден тест.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Назва курсу</th>
                <th>Набраний бал</th>
                <th>Максимальний бал</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in coursesStatistics)
            {
                <tr>
                    <td>@course.Cource.TitleCource</td>
                    <td>@course.Rating</td>
                    <td>@course.MaxRating</td>
                    <td>
                        <a asp-action="DetailCource" asp-route-id="@course.Cource.Id" class="btn btn-primary">Деталі</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
