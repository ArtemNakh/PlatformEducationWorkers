@using PlatformEducationWorkers.Core.Models
@{
    Layout = "~/Views/Shared/_LayoutWorker.cshtml";
    var coursesStatistics = ViewBag.CoursesStatistics as IEnumerable<UserResults>;
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2>Пройдені курси - Статистика</h2>
        </div>
        <div class="card-body">
            @if (coursesStatistics == null || !coursesStatistics.Any())
            {
                <p class="text-muted text-center">Ви ще не пройшли жоден тест.</p>
            }
            else
            {
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Назва курсу</th>
                            <th>Набраний бал</th>
                            <th>Максимальний бал</th>
                            <th>Дії</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in coursesStatistics)
                        {
                            <tr>
                                <td>@course.Course.TitleCource</td>
                                <td>@course.Rating</td>
                                <td>@course.MaxRating</td>
                                <td>
                                    <a asp-action="ResultCourse" asp-route-id="@course.Course.Id" class="btn btn-primary">
                                        Результати
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
