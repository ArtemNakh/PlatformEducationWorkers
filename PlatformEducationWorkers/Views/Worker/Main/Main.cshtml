@using PlatformEducationWorkers.Core.Models;
@{
    Layout = "~/Views/Shared/_LayoutWorker.cshtml";
}

<div class="container mt-5">
    @if (ViewData["UnfinishedCourses"] != null && (ViewData["UnfinishedCourses"] as IEnumerable<Courses>)?.Any() == true)
    {
        var unfinishedCourses = ViewData["UnfinishedCourses"] as IEnumerable<Courses>;

        <div class="card shadow-lg">
            <div class="card-header bg-warning text-dark text-center">
                <h3 class="mb-0">Незавершені курси</h3>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    @foreach (var course in unfinishedCourses)
                    {
                        <li class="list-group-item">
                            <h5 class="mb-1 text-primary">@course.TitleCource</h5>
                            <p class="mb-1">@course.Description</p>
                            <small class="text-muted">Створено: @course.DateCreate.ToString("dd.MM.yyyy")</small>
                        </li>
                    }
                </ul>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-success text-center shadow-lg mt-5">
            <h4 class="alert-heading">Всі курси завершені!</h4>
            <p class="mb-3">Ви освоїли всі доступні курси! 🎓</p>
            <p>Тепер настав час поділитися своїми знаннями з іншими!</p>
        </div>
    }
</div>
